<script>
$(document).ready(function() {
    let isWindowOpen = false;
    let isSearching = false;
    let currentSearchResults = [];
    
    // åˆ‡æ›èŠå¤©è¦–çª—
    $('#chatBotToggle').click(function() {
        if (isWindowOpen) {
            closeChatWindow();
        } else {
            openChatWindow();
        }
    });
    
    // é—œé–‰èŠå¤©è¦–çª—
    $('#chatBotClose').click(function() {
        closeChatWindow();
    });
    
    // ç™¼é€è¨Šæ¯
    $('#chatSend').click(function() {
        sendMessage();
    });
    
    // Enter éµç™¼é€
    $('#chatInput').keypress(function(e) {
        if (e.which === 13 && !isSearching) {
            sendMessage();
        }
    });
    
    // æ–°å¢é¸ä¸­çš„æ›¸ç±
    $('#addSelectedBooks').click(function() {
        addSelectedBooks();
    });
    
    function openChatWindow() {
        $('#chatBotWindow').show();
        isWindowOpen = true;
        $('#chatBotToggle .chat-bot-pulse').hide();
        setTimeout(() => $('#chatInput').focus(), 300);
    }
    
    function closeChatWindow() {
        $('#chatBotWindow').hide();
        isWindowOpen = false;
        $('#chatBotToggle .chat-bot-pulse').show();
        $('#bookSelection').hide();
    }
    
    function sendMessage() {
        const input = $('#chatInput');
        const query = input.val().trim();
        
        if (!query || isSearching) return;
        
        // æ·»åŠ ä½¿ç”¨è€…è¨Šæ¯
        addMessage(query, 'user');
        input.val('');
        
        // é–‹å§‹æœå°‹
        startBookSearch(query);
    }
    
    function addMessage(text, sender = 'bot') {
        const time = new Date().toLocaleTimeString('zh-TW', { hour: '2-digit', minute: '2-digit' });
        const messageClass = sender === 'user' ? 'user-message' : 'bot-message';
        
        const messageHtml = `
            <div class="message ${messageClass}">
                <div class="message-content">
                    <div class="message-text">${text}</div>
                    <div class="message-time">${time}</div>
                </div>
            </div>
        `;
        
        $('#chatMessages').append(messageHtml);
        scrollToBottom();
    }
    
    function addLoadingMessage() {
        const loadingHtml = `
            <div class="message bot-message loading-message" id="loadingMessage">
                <div class="message-content">
                    <div class="message-text">
                        ğŸ” æ­£åœ¨æœå°‹ç›¸é—œæ›¸ç±
                        <div class="loading-dots">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        $('#chatMessages').append(loadingHtml);
        scrollToBottom();
    }
    
    function removeLoadingMessage() {
        $('#loadingMessage').remove();
    }
    
    function startBookSearch(query) {
        if (isSearching) return;
        
        isSearching = true;
        $('#chatSend').prop('disabled', true);
        $('#sendIcon').text('â³');
        $('#sendText').text('æœå°‹ä¸­');
        
        addLoadingMessage();
        
        // ç™¼é€æœå°‹è«‹æ±‚
        $.ajax({
            url: '/ChatBot/SearchBooks',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ query: query }),
            success: function(response) {
                removeLoadingMessage();
                
                if (response.success && response.books && response.books.length > 0) {
                    currentSearchResults = response.books;
                    addMessage(`âœ… æ‰¾åˆ° ${response.books.length} æœ¬ç›¸é—œæ›¸ç±ï¼è«‹åœ¨ä¸‹æ–¹é¸æ“‡è¦æ–°å¢åˆ°åœ–æ›¸é¤¨çš„æ›¸ç±ã€‚`);
                    showBookSelection(response.books);
                } else {
                    addMessage('ğŸ˜” å¾ˆæŠ±æ­‰ï¼Œæ²’æœ‰æ‰¾åˆ°ç›¸é—œçš„æ›¸ç±ã€‚è«‹å˜—è©¦ä½¿ç”¨å…¶ä»–é—œéµå­—æœå°‹ã€‚');
                }
            },
            error: function() {
                removeLoadingMessage();
                addMessage('âŒ æœå°‹æ™‚ç™¼ç”ŸéŒ¯èª¤ï¼Œè«‹ç¨å¾Œå†è©¦ã€‚');
            },
            complete: function() {
                isSearching = false;
                $('#chatSend').prop('disabled', false);
                $('#sendIcon').text('ğŸ“¤');
                $('#sendText').text('ç™¼é€');
            }
        });
    }
    
    function showBookSelection(books) {
        const bookListHtml = books.map((book, index) => `
            <div class="book-item" data-index="${index}">
                <input type="checkbox" class="book-checkbox" id="book-${index}">
                <div class="book-title">${escapeHtml(book.title)}</div>
                <div class="book-author">ä½œè€…ï¼š${escapeHtml(book.author)}</div>
                <div class="book-description">${escapeHtml(book.description.substring(0, 100))}${book.description.length > 100 ? '...' : ''}</div>
            </div>
        `).join('');
        
        $('#bookList').html(bookListHtml);
        $('#bookSelection').show();
        
        // æ›¸ç±é …ç›®é»æ“Šäº‹ä»¶
        $('.book-item').click(function(e) {
            if (e.target.type !== 'checkbox') {
                const checkbox = $(this).find('.book-checkbox');
                checkbox.prop('checked', !checkbox.prop('checked'));
            }
            $(this).toggleClass('selected', $(this).find('.book-checkbox').prop('checked'));
        });
        
        scrollToBottom();
    }
    
    function addSelectedBooks() {
        const selectedBooks = [];
        $('.book-checkbox:checked').each(function() {
            const index = $(this).attr('id').replace('book-', '');
            selectedBooks.push(currentSearchResults[index]);
        });
        
        if (selectedBooks.length === 0) {
            addMessage('âš ï¸ è«‹å…ˆé¸æ“‡è¦æ–°å¢çš„æ›¸ç±ã€‚');
            return;
        }
        
        // ç™¼é€æ–°å¢è«‹æ±‚
        $.ajax({
            url: '/ChatBot/AddSelectedBooks',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ selectedBooks: selectedBooks }),
            success: function(response) {
                if (response.success) {
                    addMessage(`âœ… ${response.message}`);
                    $('#bookSelection').hide();
                    
                    // é‡æ–°è¼‰å…¥é é¢ä»¥é¡¯ç¤ºæ–°å¢çš„æ›¸ç±
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                } else {
                    addMessage(`âŒ ${response.message}`);
                }
            },
            error: function() {
                addMessage('âŒ æ–°å¢æ›¸ç±æ™‚ç™¼ç”ŸéŒ¯èª¤ï¼Œè«‹ç¨å¾Œå†è©¦ã€‚');
            }
        });
    }
    
    function scrollToBottom() {
        const messages = $('#chatMessages');
        messages.scrollTop(messages[0].scrollHeight);
    }
    
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
});
</script>